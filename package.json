{
  "name": "clark-gateway",
  "version": "2.7.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "nodemon",
    "serve": "node -r ts-node/register ./src/app.ts",
    "serve:debug": "node --inspect=5858 -r ts-node/register ./src/app.ts",
    "build": "node_modules/.bin/gulp tsc",
    "gulp-tsc": "node_modules/.bin/gulp start",
    "lint": "node_modules/.bin/tslint --project ./src/**",
    "pack": "npm run build && cp ./package.json ./dist && cd ./dist && zip -r ../dist.zip  ./* & cd ..",
    "zip": "cp ./package.json ./dist && cd ./dist && zip -r ../dist.zip  ./* & cd ..",
    "deploy": "eb deploy CLARK-Gateway-Production --label CLARK-Gateway-v$(node -p \"require('./package.json').version\")",
    "document": "node_modules/.bin/typedoc --out ./docs/ ./src/"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.0.39",
    "@types/express-http-proxy": "^1.5.2",
    "@types/express-jwt": "0.0.40",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/lodash": "^4.14.110",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.5.2",
    "@types/node-fetch": "^2.3.0",
    "@types/raven": "^2.1.3",
    "@types/request-promise": "^4.1.39",
    "@types/socket.io": "^1.4.33",
    "gulp": "^4.0.0",
    "gulp-nodemon": "^2.4.2",
    "gulp-typescript": "^5.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "typedoc": "^0.12.0",
    "typescript": "^2.3.4"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.15.2",
    "express-http-proxy": "^1.1.0",
    "express-jwt": "^5.3.1",
    "helmet": "^3.6.1",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.0",
    "node-fetch": "^2.2.0",
    "raven": "^2.3.0",
    "request": "^2.85.0",
    "socket.io": "^2.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run serve",
    "ext": "ts"
  }
}
